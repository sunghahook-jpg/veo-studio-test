 <body class="h-full">
  <div id="app" class="w-full h-full gradient-bg flex items-center justify-center p-4 overflow-auto">
   <div class="glass-effect rounded-3xl shadow-2xl p-8 w-full max-w-3xl"><!-- Header -->
    <div class="text-center mb-8">
     <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-purple-500 to-indigo-600 rounded-2xl mb-4">
      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewbox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
      </svg>
     </div>
     <h1 id="appTitle" class="text-4xl font-bold mb-2" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Text to Speech</h1>
     <p id="subtitle" class="text-gray-600">Ubah teks menjadi suara natural</p>
    </div><!-- Text Input Area -->
    <div class="mb-6"><label for="textInput" class="block text-sm font-semibold text-gray-700 mb-2">Teks Anda</label> <textarea id="textInput" rows="6" class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl resize-none transition-all" placeholder="Ketik atau tempel teks Anda di sini..."></textarea>
     <div class="flex items-center justify-between mt-2"><span id="charCount" class="text-sm text-gray-500">0 karakter</span> <button id="clearBtn" class="text-sm text-purple-600 hover:text-purple-700 font-semibold hidden">Hapus</button>
     </div>
    </div><!-- Voice Settings -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
     <div><label for="voiceSelect" class="block text-sm font-semibold text-gray-700 mb-2">Pilih Suara</label> <select id="voiceSelect" class="w-full px-4 py-2 border-2 border-gray-200 rounded-xl bg-white focus:outline-none focus:border-purple-500"> <option>Memuat suara...</option> </select>
     </div>
     <div><label for="rateSlider" class="block text-sm font-semibold text-gray-700 mb-2">Kecepatan: <span id="rateValue">1.0x</span></label> <input type="range" id="rateSlider" min="0.5" max="2" step="0.1" value="1" class="w-full">
     </div>
     <div><label for="pitchSlider" class="block text-sm font-semibold text-gray-700 mb-2">Nada: <span id="pitchValue">1.0</span></label> <input type="range" id="pitchSlider" min="0.5" max="2" step="0.1" value="1" class="w-full">
     </div>
    </div><!-- Control Buttons -->
    <div class="flex gap-4 mb-6"><button id="playBtn" class="control-btn flex-1 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold py-4 rounded-xl shadow-lg hover:shadow-xl flex items-center justify-center gap-2">
      <svg id="playIcon" class="w-6 h-6" fill="currentColor" viewbox="0 0 20 20"><path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z" />
      </svg><span id="playBtnText">Putar Suara</span> </button> <button id="stopBtn" class="control-btn bg-red-500 text-white font-semibold px-8 py-4 rounded-xl shadow-lg hover:shadow-xl hidden flex items-center justify-center gap-2">
      <svg class="w-6 h-6" fill="currentColor" viewbox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8 7a1 1 0 00-1 1v4a1 1 0 001 1h4a1 1 0 001-1V8a1 1 0 00-1-1H8z" clip-rule="evenodd" />
      </svg><span id="stopBtnText">Stop</span> </button>
    </div><!-- Status Display -->
    <div id="statusDisplay" class="hidden bg-purple-50 border-2 border-purple-200 rounded-xl p-4 text-center">
     <div class="flex items-center justify-center gap-2 text-purple-700">
      <div class="voice-wave"></div>
      <div class="voice-wave"></div>
      <div class="voice-wave"></div>
      <div class="voice-wave"></div><span class="ml-2 font-semibold">Sedang memutar...</span>
     </div>
    </div><!-- Info Toast -->
    <div id="toast" class="hidden fixed bottom-8 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white px-6 py-3 rounded-xl shadow-2xl"><span id="toastMessage"></span>
    </div>
